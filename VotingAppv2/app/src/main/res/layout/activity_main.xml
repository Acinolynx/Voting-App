<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Kalian Pada Suka Ngga Nihh Sama Jajananya??"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32dp" />

    <LinearLayout
        android:id="@+id/imgLayout"
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="457dp"
            android:layout_height="800dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/lkdslk" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtLayout"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_below="@+id/imgLayout"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtFirst"
            android:layout_width="125dp"
            android:layout_height="180dp"
            android:layout_margin="35dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="48dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/txtSecond"
            android:layout_width="125dp"
            android:layout_height="180dp"
            android:layout_margin="27dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="48dp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLayout"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/btn_bg"
            android:text="Suka Bangett!"
            android:textColor="@color/colorPrimary">

        </Button>

        <Button
            android:id="@+id/btnSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/btn_bg"
            android:text="Ngga Suka :("
            android:textColor="@color/colorPrimary"></Button>

    </LinearLayout>

</LinearLayout>
